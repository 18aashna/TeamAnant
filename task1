#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
#include <sys/wait.h>
#include <fcntl.h>
#include <string.h>
#define MAX 100

int fd;

void parent(){
	char buff[MAX];
	int n;
	printf("enter input\n");
	scanf("%s",buff);
	if ((fd=open("apue.txt",O_WRONLY | O_CREAT | O_TRUNC)) < 0){
		printf("open error");}
	if ((n=write(fd,buff,strlen(buff))) != strlen(buff)){
		printf("write error");}
	close(fd);
}

void child(){
	sleep(3);
	char buff[MAX];
	int n;
	if ((fd=open("apue.txt",O_RDONLY | O_CREAT | O_TRUNC)) < 0){
		printf("open error");}
	if ((n=read(fd,buff,strlen(buff))) != strlen(buff)){
		printf("read error");}
	close(fd);
}

int main() {
    pid_t pid = fork();

    if (pid < 0) {
        printf ("fork error");
    } else if (pid == 0) {
        child();
    } else {
        parent();
        wait(NULL); 
    }

    return 0;
}

